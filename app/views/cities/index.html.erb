<h1>Listing Cities</h1>

<a href="<%= new_city_path %>" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span> Add New City</a>
<br>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>City name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
