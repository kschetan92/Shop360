<% provide(:title, 'Listing customer') %>
<h1>Listing Customers</h1>

<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>No.</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.first_name, customer %></td>
        <td><%= link_to customer.last_name, customer %></td>
        <td><%= link_to customer.email, customer %></td>
        <td><%= link_to customer.mobile, customer %></td>
        <% if current_customer.admin? and !current_customer?(customer) %>
        <td><%= link_to "Delete", customer, method: :delete, data: { confirm: "You sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= will_paginate %>