
<h4>You have made <%= pluralize(@customer_orders.count, "order")%> till date</h4>

<% if @customer_orders.size.zero? %>
  <h3>No orders to show </h3>
<% else %>
  
<table class="table table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Payment mode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_orders.each do |order| %>
      <tr>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.payment_mode %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
