
<% if @product.image? %>
  <p>
    <%= image_tag @product.image.url(:medium) %>
<% else %>
    <%= image_tag("missing.jpg", size: "300x300") %>
  </p>
<% end %>
<p>
  <strong>Product Name:</strong>
  <%= @product.product_name %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price, :unit => "Rs ")%>
</p>

<% if @product.category %>
  <p>
      <strong>Category: </strong><%= @product.category.category_name %>
  </p>
<% end %>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>