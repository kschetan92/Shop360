<h2><div class="cart_title">Your Cart</div></h2>
<table class="table table-bordered">
<tr>
  <th>Product</th>
  <th>Quantity</th>
  <th>Unit price</th>
</tr>
<% @cart.line_items.each do |item| %>
<% if item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
<td><%= item.product.product_name %></td>
<td><%= item.quantity %></td>
<td class="item_price"><%= number_to_currency(item.total_price, :unit => "Rs ") %></td>
</tr>
<% end %>
<tr class="total_line">
<td colspan="2">Total</td>
<td class="total_cell"><%= number_to_currency(@cart.total_price, :unit => "Rs ") %></td>
</tr>
</table>
<%= link_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
<%= link_to 'Continue Shopping', root_path, class: "btn btn-info" %>
<div style="float: right">
<%= link_to 'Checkout', new_order_path, class: "btn btn-success" %>
</div>